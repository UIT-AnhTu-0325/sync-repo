.vscode/launch.json
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Remote Docker App",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 4000,
            "host": "127.0.0.1"
        }
    ]
}

cmd:
  docker build . --tag debug-image --file Dockerfile.debug --progress=plain --no-cache
  docker run --publish 80:80 --publish 4000:4000 --name debug-server debug-image

